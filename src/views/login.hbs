<div>
    <div>
        <h1>LOGIN</h1>
        <br>
        <form action="/login" method="post" role="form" autocomplete="off">
            <div>
                <input id="username" name='username' placeholder="email" type="text" required>
            </div>

            <div>
                <input id="password" name='password' placeholder="password" type="password"
                    required>
            </div>

            <div>
                <input type="submit" value="Login">
            </div>
        </form>
        <hr>
        <div>
            <button onclick="location.href = '/register'">Ir a Register</button>
        </div>
    </div>
</div>